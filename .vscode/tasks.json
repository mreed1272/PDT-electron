{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "run",
            "command": "electron",
            "isShellCommand": true,
            "showOutput": "always",
            "args": [
                "main.js"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "package",
            "command": "pdt-package.cmd",
            "isShellCommand": true,
            "showOutput": "always",
            "args": [
                "../"
            ]
        }
        /*,  
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ]
        }*/
    ]
} 