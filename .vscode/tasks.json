{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "run",
            "command": "electron",
            "isShellCommand": true,
            "showOutput": "always",
            "args": [
                "main.js"
            ],
            "isBuildCommand": true,
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "taskName": "package",
            "command": ".\\pdt-package.bat",
            "isShellCommand": true,
            "showOutput": "always",
            "args": [
                "../"
            ]
        }
    ]
} 