{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run test",
            "command": "electron main.js",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "group": "build",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "label": "Package PDT",
            "command": ".\\pdt-package.bat",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "group": "none",
            "args": [
                "../"
            ]
        }
    ]
} 